#:import utils kivy.utils

<CardsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#fff9e8")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            font_name: "my_font"
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .1
            text: "my travels"
            color: 0, 0, 0, 1
            id: streak_label
        MDCard
            size_hint: .9, .1
            pos_hint: {"center_x": .5, "center_y": .7}
            elevation: 10
            shadow_color: "grey"
            md_bg_color: "white"
            md_bg_color_disabled: "grey"
            style: "elevated"
            text: "my routes"
            text_color: 0, 0, 0, 1
        MDCard
            size_hint: .9, .1
            pos_hint: {"center_x": .5, "center_y": .5}
            elevation: 10
            shadow_color: "grey"
            md_bg_color: "white"
            md_bg_color_disabled: "grey"
            style: "elevated"
            text: "create a new route"
            text_color: 0, 0, 0, 1
