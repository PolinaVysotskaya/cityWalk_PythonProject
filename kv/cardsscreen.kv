#:import utils kivy.utils

<CardsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#fff9e8")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            font_name: "my_font"
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .1
            text: "my travels"
            color: 0, 0, 0, 1
            id: streak_label
        MDRoundFlatButton:
            line_color: 0, 0, 0, 1
            text: "                               my routes                               "
            pos_hint: {"center_x": .5, "center_y": .7}
            text_color: 0, 0, 0, 1
            on_release: app.change_screen("history_screen")
            theme_shadow_color: "Custom"
            shadow_color: "pink"
            md_bg_color: "white"
        MDRoundFlatButton:
            line_color: 0, 0, 0, 1
            text: "                       create a new route                     + "
            pos_hint: {"center_x": .5, "center_y": .6}
            text_color: 0, 0, 0, 1
            on_release: app.change_screen("new_route_screen")
            theme_shadow_color: "Custom"
            shadow_color: "pink"
            md_bg_color: "white"

